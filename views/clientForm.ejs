<%- include("partials/head.ejs") %>
<%- include("partials/navbar.ejs") %>

<section class="flex flex-col items-center my-12">
  <form action="/clients" method="POST" class="max-w-xl w-full my-5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Add New Client</h2>
    <div class="grid grid-cols-2 gap-4">
      <div class="mb-4">
        <label for="firstName" class="block text-gray-700 font-bold mb-2">First Name</label>
        <input type="text" name="firstName" id="firstName" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client first name" required>
      </div>

      <div class="mb-4">
        <label for="lastName" class="block text-gray-700 font-bold mb-2">Last Name</label>
        <input type="text" name="lastName" id="lastName" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client last name" required>
      </div>

      <div class="mb-4 col-span-2">
        <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
        <input type="email" name="email" id="email" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client email" required>
      </div>

      <div class="mb-4 col-span-2">
        <label for="phone" class="block text-gray-700 font-bold mb-2">Phone Number</label>
        <input type="tel" name="phone" id="phone" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client phone number" required>
      </div>

      <div class="mb-4 col-span-2">
        <label for="street" class="block text-gray-700 font-bold mb-2">Street</label>
        <input type="text" name="address[street]" id="street" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client street" required>
      </div>

      <div class="mb-4 col-span-2">
        <label for="city" class="block text-gray-700 font-bold mb-2">City</label>
        <input type="text" name="address[city]" id="city" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client city" required>
      </div>

      <div class="mb-4">
        <label for="state" class="block text-gray-700 font-bold mb-2">State</label>
        <input type="text" name="address[state]" id="state" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client state" required>
      </div>

      <div class="mb-4">
        <label for="zipCode" class="block text-gray-700 font-bold mb-2">Zip Code</label>
        <input type="text" name="address[zipCode]" id="zipCode" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter client zip code" required>
      </div>

      <div class="mb-4">
        <label for="sale" class="block text-gray-700 font-bold mb-2">Sale Amount</label>
        <input type="number" name="sale" id="sale" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter sale amount" required>
      </div>
    </div>

    <div class="flex">
      <button type="submit" class="bg-green-500 hover:bg-green-700 mr-5 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Add Client</button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
      <a href="/clients" class="ml-5"><button type="button" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Cancel</button></a>
    </div>
  </form>

  <a type="button" href="/" class="mb-5"><button type="button">Home</button></a>
</section>

<%- include("partials/footer.ejs") %>